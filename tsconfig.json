{
  "compilerOptions": {

      "target": "es2017",  
      "module": "es2022", //commonjs 
      "esModuleInterop": true, 
      "allowJs": true,
      "checkJs": true,
      "forceConsistentCasingInFileNames": true, 
      "strict": true,
      "skipLibCheck": true, 
      "outDir": "./dist",
      "rootDir": "./src",
      "noImplicitAny": true,
      "strictNullChecks": true,
      "lib": [
        "es2015",
        "dom"
      ]
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules"
    ]
}
